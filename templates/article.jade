include mixins/disqus
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block append header
  h1= page.title
  p.author
    | Written by #{page.metadata.author}

block content
  article.article
    section.content!= typogr(page.html).typogrify()

    section.comments
      +disqus

